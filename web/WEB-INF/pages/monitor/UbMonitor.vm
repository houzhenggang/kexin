<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    #if($userId == -1)
        <title>全部用户的浏览行为监控显示器</title>
    #else
        <title>单用户的浏览行为监控显示器</title>
    #end

    <link href="/kexin/resources/css/reset.css" rel="stylesheet" type="text/css" media="screen"/>
    <link href="/kexin/resources/css/layout1.css" rel="stylesheet" type="text/css" media="screen"/>

    <script src="/kexin/resources/js/jquery.min.js" type="text/javascript"></script>
    <script src="/kexin/resources/js/highcharts.js" type="text/javascript"></script>
    <script src="/kexin/resources/js/exporting.js" type="text/javascript"></script>

    <link rel="stylesheet" type="text/css" href="/kexin/resources/js/themes/bootstrap/easyui.css">
    <link rel="stylesheet" type="text/css" href="/kexin/resources/js/themes/icon.css">

    <script type="text/javascript" src="/kexin/resources/js/jquery.easyui.min.js"></script>

    <script type="text/javascript" src="/kexin/resources/js/DateFormater.js"></script>

    <script type="text/javascript">

            #if($ubResultList.size() == 0)
            var maxTime = '1990-01-01 00:00:00.0'
            #else
            var maxTime = '$dateTool.format("yyyy-MM-dd hh:mm:ss.S",$ubResultList[0].visitTime)';
            #end
        var count = 0;
        function markRed(index, row) {
            count++;
            if (row.target == '异常') {
                return 'background-color:#ffee00; color:red;';
            }
            if (count % 2 == 0) {
                return 'background-color:rgb(230,230,230); color:rgb(79,67,138);';
            }
        }
        $(function () {
            setInterval(function () {
                $.ajax({
                    type: 'POST',
                    url: 'newUbResult',
                    dataType: 'json',
                    data: {stringStartTime: maxTime, userId:$userId},
                    success: function (data) {
                        var i;
                        for (i = 0; i < data.length; i++) {
                            data[i].visitTime = new Date(data[i].visitTime).format("yyyy-MM-dd hh:mm:ss.S");
                            if (data[i].target == 0) {
                                data[i].target = '异常';
                            }
                            else
                                data[i].target = '正常';
                            $("#ubResult-table").datagrid('insertRow', {index: 0, row: data[i]});
                            if ($("#ubResult-table").datagrid('getRows').length >= 50) {
                                $("#ubResult-table").datagrid('deleteRow', $("#ubResult-table").datagrid('getRows').length - 1);
                            }
                        }
                        if (data.length != 0) {
                            maxTime = data[0].visitTime;
                        }
                    }
                });
            }, 2000);

            setInterval(function () {
                window.location.reload();
            }, 3600000)

        });
    </script>
</head>
<body>
<div id="container">
    <div id="body">
        <div class="z-box" style="margin-top: 60px;">
            <div class="z-box-title">
                <span class="z-desc">
                    #if($userId == -1)
                        全部用户的浏览行为信息
                    #else
                        单用户的浏览行为信息
                    #end
                </span>
            </div>
            <div class="z-box-content">
                <table id="ubResult-table" class="easyui-datagrid" style="height:470px;"
                       data-options="singleSelect:true,collapsible:true,rowStyler:markRed">
                    <thead>
                    <tr>
                        <th data-options="field:'userId',width:100,align:'center'">用户ID</th>
                        <th data-options="field:'visitTime',width:350,align:'center'">访问时间</th>
                        <th data-options="field:'url',width:250,align:'center'">访问域名</th>
                        <th data-options="field:'target',width:230,align:'center'">判定结果</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($ubResult in $ubResultList)
                        <tr>
                            <td>$ubResult.userId</td>
                            <td>$dateTool.format("yyyy-MM-dd hh:mm:ss.S",$ubResult.visitTime)</td>
                            <td>$ubResult.url</td>
                            #if($ubResult.target == 0)
                                <td>异常</td>
                            #else
                                <td>正常</td>
                            #end
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</body>
</html>
