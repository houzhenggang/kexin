<html>
<head>

    <title>用户注册</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/kexin/resources/css/bootstrap.min.css" rel="stylesheet" media="screen">
    <script src="/kexin/resources/js/jquery.min.js"></script>
    <script src="/kexin/resources/js/bootstrap.min.js"></script>
    <style type="text/css">
        table {
            text-align: center;
            margin: 0 auto;
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid grey;
            text-align: center;
        }
    </style>


</head>

<body>
<div class=" text-center ">
    <h2>用户注册</h2>
    <br>

    <form name="UserAdd" method="post" action="register">
        <table class="text-left">
            <tr>
                <th>用户名:</th>
                <td><input name="name" type="text"/></td>
            </tr>
            <tr>
                <th>密码:</th>
                <td><input name="password" type="password"/></td>
            </tr>
            <tr>
                <th>确认密码:</th>
                <td><input type="password" name="re_password"></td>
            </tr>
            <tr>
                <th>邮箱:</th>
                <td><input type="text" name="email"></td>
            </tr>
            <tr>
                <th>电话号码:</th>
                <td><input type="text" name="phoneNumber"></td>
            </tr>
            <tr>
                <td colspan="2" class="text-center">
                    <input type="button" value="提交" onclick="Check()"/></td>
            </tr>
        </table>
    </form>
</div>
</body>
<script type="text/javascript">
    function Check() {
        if (document.UserAdd.name.value == "") {
            window.alert("请填写用户名！");
            window.UserAdd.name.focus();
            return false;
        }
        if (document.UserAdd.password.value == "") {
            window.alert("请填写密码！");
            window.UserAdd.password.focus();
            return false;
        }
        if (document.UserAdd.re_password.value == "") {
            window.alert("请填写确认密码！");
            window.UserAdd.re_password.focus();
            return false;
        }
        if (document.UserAdd.re_password.value != document.UserAdd.password.value ){
            window.alert("两次密码输入不一致！");
            window.UserAdd.password.focus();
            return false;
        }
        if (document.UserAdd.email.value == "") {
            window.alert("请填写邮箱！");
            window.UserAdd.email.focus();
            return false;
        }
        if (document.UserAdd.phoneNumber.value == "") {
            window.alert("请填写电话号码！");
            window.UserAdd.phoneNumber.focus();
            return false;
        }

        document.UserAdd.submit();
    }
</script>
</html>
